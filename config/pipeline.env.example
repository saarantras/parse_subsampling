# Copy to config/pipeline.env and edit as needed.
# Values can also be overridden as environment variables at submission time.

# Parse split-pipe genome reference directory (must exist on compute nodes).
# After genome build completes, set this to GENOME_OUT_DIR below.
GENOME_DIR=/home/mcn26/palmer_scratch/analysis/genome

# One-time standalone genome build settings.
GENOME_BUILD_ROOT=/home/mcn26/scratch_pi_skr2/mcn26/parse_splitpipe_genome_build
GENOME_NAME=hg38
GENOME_FASTA_URL=https://ftp.ensembl.org/pub/release-109/fasta/homo_sapiens/dna/Homo_sapiens.GRCh38.dna.primary_assembly.fa.gz
GENOME_GTF_URL=https://ftp.ensembl.org/pub/release-109/gtf/homo_sapiens/Homo_sapiens.GRCh38.109.gtf.gz
GENOME_OUT_DIR=/home/mcn26/scratch_pi_skr2/mcn26/parse_splitpipe_genome_build/genome_hg38_ensembl109

# Conda env containing split-pipe.
SPLIT_PIPE_CONDA_ENV=splitpipe

# Conda env containing analysis libraries (numpy/pandas/scipy/matplotlib/anndata/scanpy).
# Defaults to SPLIT_PIPE_CONDA_ENV if unset.
ANALYSIS_CONDA_ENV=splitpipe

# SLURM partitions and resources.
ALL_PARTITION=day
COMBINE_PARTITION=day
SCORE_PARTITION=day
AGG_PARTITION=day

ALL_CPUS=16
ALL_MEM=96G
ALL_TIME=08:00:00

COMBINE_CPUS=4
COMBINE_MEM=32G
COMBINE_TIME=01:00:00

SCORE_CPUS=4
SCORE_MEM=32G
SCORE_TIME=01:00:00

AGG_CPUS=2
AGG_MEM=16G
AGG_TIME=00:30:00

# Standalone genome-build resources.
BUILD_PARTITION=day
BUILD_CPUS=5
BUILD_MEM=120G
BUILD_TIME=04:00:00
